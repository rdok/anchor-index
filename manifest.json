{
  "manifest_version": 2,
  "name": "Anchor Index",
  "description": "Create a list with all anchors in current page.",
  "version": "1.0",
  "browser_action": {
    "default_title": "Anchor Index",
    "default_icon": {
      "19": "img/icon48.png",
      "38": "img/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": ["img/icon128.png"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "offline_enabled": true,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}

